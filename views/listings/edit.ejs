<% layout('/layouts/boilerplate') -%>
    <body>


        <div class="row mt-3">
            <div class="col-8 offset-2">

                <h3>Edit your Listing</h3>
                <form method="POST" action="/listings/<%= list._id%>?_method=PUT" novalidate class="needs-validation">

                    <div class="mb-3">
                        <label for="title" class="form-label">Add title</label>
                        <input name="listing[title]" value="<%= list.title%>" type="text" class="form-control" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Add Description</label>
                        <textarea name="listing[description]" type="text" class="form-control"
                            required><%= list.description %> </textarea>
                        <div class="invalid-feedback">Enter short description</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Enter Image URL</label>
                        <input name="listing[image]" value="<%= list.image.url %>" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Enter url link</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Enter Price</label>
                            <input name="listing[price]" value="<%= list.price %> " type="text" class="form-control"
                                required>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Enter Your Location</label>
                            <input name="listing[location]" value="<%= list.location%> " type="text"
                                class="form-control" required>

                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Enter Your Country</label>
                            <input name="listing[country]" value="<%= list.country%> " type="text" class="form-control"
                                required>
                            <div class="invalid-feedback">Enter Country name</div>

                        </div>
                    </div>

                    <button class="btn btn-dark mt-3 edit-btn">Edit</button>
                </form>
            </div>
        </div>
        <script src="/js/script.js"></script>
    </body>